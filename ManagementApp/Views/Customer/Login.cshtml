@model ManagementApp.Models.Customer;

@{
	ViewData["Title"] = "Log in to your account";
}

<div class="row">
	<div class="col-md-6 offset-3">
		<div class="row">
			<div class="col-md-8 offset-2">
				<form asp-action="Login">
					<h4>Log in to your account</h4>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group">
						<label asp-for="EmailAddress" class="control-label"></label>
						<input asp-for="EmailAddress" class="form-control" />
						<span asp-validation-for="EmailAddress" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Password" class="control-label"></label>
						<input asp-for="Password" class="form-control" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="form-group">
						<input class=" w-100 btn btn-outline-success float-right" type="submit" value="Log in" />
						<p>Don't have an account yet?   <a class="text-decoration-none text-success" asp-controller="Customer" asp-action="Register">Register</a></p>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

